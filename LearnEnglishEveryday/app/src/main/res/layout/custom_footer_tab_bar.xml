<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tab_root"
    android:orientation="horizontal"
    android:weightSum="3"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="50dp">
    <com.balysv.materialripple.MaterialRippleLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/tab_groups"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:mrl_rippleOverlay="true"
        app:mrl_rippleColor="#FFF"
        app:mrl_rippleAlpha="0.2"
        app:mrl_rippleHover="true">
        <RelativeLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/tab_groups_notification"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="-5dp"
                android:layout_toRightOf="@+id/groups_content"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/circle_notification">

                <TextView
                    android:id="@+id/tab_groups_notification_count"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="#FFF"
                    android:typeface="monospace"
                    android:textSize="10sp"/>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/groups_content"
                android:layout_above="@+id/tab_groups_bottom_line"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/icon_groups_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Groups"
                    android:textColor="#FFF"
                    android:typeface="monospace"
                    android:textSize="10sp"/>
            </LinearLayout>
            <View
                android:id="@+id/tab_groups_bottom_line"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#FFF"/>
        </RelativeLayout>
    </com.balysv.materialripple.MaterialRippleLayout>
    <com.balysv.materialripple.MaterialRippleLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/tab_home"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:mrl_rippleOverlay="true"
        app:mrl_rippleColor="#FFF"
        app:mrl_rippleAlpha="0.2"
        app:mrl_rippleHover="true">
        <RelativeLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/tab_home_notification"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/home_content"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/circle_notification">

                <TextView
                    android:id="@+id/tab_home_notification_count"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="#FFF"
                    android:typeface="monospace"
                    android:textSize="10sp"/>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/home_content"
                android:layout_above="@+id/tab_home_bottom_line"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/icon_home_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:textColor="#FFF"
                    android:typeface="monospace"
                    android:textSize="10sp"/>
            </LinearLayout>

            <View
                android:id="@+id/tab_home_bottom_line"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#FFF"/>
        </RelativeLayout>
    </com.balysv.materialripple.MaterialRippleLayout>
    <com.balysv.materialripple.MaterialRippleLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/tab_account"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:mrl_rippleOverlay="true"
        app:mrl_rippleColor="#FFF"
        app:mrl_rippleAlpha="0.2"
        app:mrl_rippleHover="true">
        <RelativeLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/tab_account_notification"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="-5dp"
                android:layout_toRightOf="@+id/account_content"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/circle_notification">

                <TextView
                    android:id="@+id/tab_account_notification_count"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="#FFF"
                    android:typeface="monospace"
                    android:textSize="10sp"/>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/account_content"
                android:layout_above="@+id/tab_account_bottom_line"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/icon_account_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Account"
                    android:textColor="#FFF"
                    android:typeface="monospace"
                    android:textSize="10sp"/>
            </LinearLayout>
            <View
                android:id="@+id/tab_account_bottom_line"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#FFF"/>
        </RelativeLayout>
    </com.balysv.materialripple.MaterialRippleLayout>

</LinearLayout>